{
 "version": 1,
 "rows": 5,
 "widgets": [
  {
   "rows": 3,
   "widgets": [
    {
     "type": "label",
     "size": 18,
     "text": "Artist",
     "uid": "artist",
     "halign": "fill"
    },
    {
     "type": "label",
     "size": 18,
     "text": "Album",
     "uid": "album"
    },
    {
     "type": "label",
     "size": 18,
     "text": "Track",
     "uid": "track"
    }
   ]
  },
  {
   "type": "pixmap",
   "w": 100,
   "h": 100,
   "uid": "cover_art",
   "on_event": "pixmap_event"
  },
  {
   "type": "progressbar",
   "halign": "fill",
   "ptype": "seconds",
   "inverse": true,
   "uid": "playback"
  },
  {
   "cols": 4,
   "border": "none",
   "halign": "fill",
   "uniform": "true",
   "widgets": [
    {
     "type": "button",
     "label": "Prev",
     "btype": "first",
     "halign": "fill",
     "on_event": "button_prev_event"
    },
    {
     "type": "button",
     "btype": "play",
     "halign": "fill",
     "text_align": "left",
     "on_event": "button_play_event"
    },
    {
     "type": "button",
     "btype": "pause",
     "halign": "fill",
     "on_event": "button_pause_event"
    },
    {
     "type": "button",
     "label": "Next",
     "btype": "last",
     "halign": "fill",
     "on_event": "button_next_event"
    }
   ]
  },
  {
   "rows": 2,
   "border": "none",
   "halign": "fill",
   "widgets": [
    {
     "halign": "fill",
     "type": "table",
     "min_rows": 5,
     "get_elem": "playlist_get",
     "set_row": "playlist_set_row",
     "on_event": "playlist_event",
     "uid": "playlist",
     "header": [
      {
       "label": "Playlist",
       "min_size": 20,
       "fill": 1
      }
     ]
    },
    {
     "cols": 4,
     "border": "none",
     "halign": "fill",
     "uniform": "true",
     "widgets": [
      {
       "type": "button",
       "btype": "up",
       "halign": "fill",
       "on_event": "button_playlist_move_up"
      },
      {
       "type": "button",
       "btype": "down",
       "halign": "fill",
       "on_event": "button_playlist_move_down"
      },
      {
       "type": "button",
       "btype": "add",
       "halign": "fill",
       "on_event": "button_playlist_add"
      },
      {
       "type": "button",
       "btype": "rem",
       "halign": "fill",
       "on_event": "button_playlist_rem"
      }
     ]
    }
   ]
  }
 ]
}
